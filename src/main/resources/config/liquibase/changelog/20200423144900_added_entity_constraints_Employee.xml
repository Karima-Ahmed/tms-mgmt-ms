<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <!--
        Added the constraints for entity Employee.
    -->
    <changeSet id="20200423144900-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="department_id"
                                 baseTableName="employee"
                                 constraintName="fk_employee_department_id"
                                 referencedColumnNames="id"
                                 referencedTableName="department"/>

        <addForeignKeyConstraint baseColumnNames="center_id"
                                 baseTableName="employee"
                                 constraintName="fk_employee_center_id"
                                 referencedColumnNames="id"
                                 referencedTableName="center"/>

        <addForeignKeyConstraint baseColumnNames="employee_type_id"
                                 baseTableName="employee"
                                 constraintName="fk_employee_employee_type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="employee_type"/>

    </changeSet>
</databaseChangeLog>
